  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^1.6.1",
    "happy-dom": "^20.0.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.6.1"
  }
}
